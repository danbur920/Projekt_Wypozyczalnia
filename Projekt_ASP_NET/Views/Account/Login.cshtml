@model Projekt_ASP_NET.ViewModels.LoginViewModel

<h2>Logowanie</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    ;
    <div class="form-group">
        <span>Login:</span> @Html.TextBoxFor(x => x.UserName, new { placeholder = "Podaj login" })
    </div>
    <div class="form-group">
        <span>Hasło:</span> @Html.PasswordFor(x => x.Password, new { placeholder = "Podaj hasło" })
    </div>
    <button type="submit">Zaloguj</button>
}