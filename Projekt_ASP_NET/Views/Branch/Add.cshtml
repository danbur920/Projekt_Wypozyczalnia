@model Projekt_ASP_NET.Models.Branch

<h1>Dodaj oddział</h1>

@using (Html.BeginForm("Add", "Branch", FormMethod.Post))
{
    @Html.ValidationSummary();

    <div class="form-group">
        <label>Lokalizacja:</label>
        @Html.TextBoxFor(x => x.Locality, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Liczba pojazdów:</label>
        @Html.TextBoxFor(x => x.NumberOfVehicles, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary" asp-area="" asp-action="Add" asp-controller="Branch">Dodaj oddział</button>
}