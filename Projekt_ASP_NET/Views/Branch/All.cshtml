@model IEnumerable<Branch>

@{
    ViewData["Title"] = "Punkty wypożyczeń";
}

<h1 style="text-align: center">Punkty wypożyczeń</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Miejscowość</th>
            <th>Ilość pojazdów</th>
            <th>Działania</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td>@branch.Id</td>
                <td>@branch.Locality</td>
                <td>@branch.NumberOfVehicles</td>
                <td>
                    <a asp-area="" asp-controller="Branch" asp-action="Delete" asp-route-id="@branch.Id">Usuń</a>
                    <a asp-area="" asp-controller="Branch" asp-action="Update" asp-route-id="@branch.Id">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>