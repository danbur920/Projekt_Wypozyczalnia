@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Pojazdy";
}

<h1 style="text-align: center">Lista pojazdów</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Firma</th>
            <th>Dostępność</th>
            <th>Ceny</th>
            <th>Zarządzaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Id</td>
                <td>@vehicle.Name</td>
                <td>@vehicle.Brand</td>
                <td style="background-color: @(vehicle.IsAvailable == true ? "green" : "red")">
                    @(vehicle.IsAvailable == true ? "Dostępny" : "Niedostępny")
                </td>
                <td>
                    <ul>
                        <li>Cena za dzień: @vehicle.PricePerDay zł</li>
                        <li>Cena za miesiąc: @vehicle.PricePerMonth zł</li>
                        <li>Cena kupna: @vehicle.PurchasePrice zł</li>
                    </ul>
                </td>
                <td>
                    <a href="/Vehicle/One/@vehicle.Id">Info</a>
                    <a asp-area="" asp-controller="Vehicle" asp-action="Delete" asp-route-id="@vehicle.Id">Usuń</a>
                    <a asp-area="" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@vehicle.Id">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>