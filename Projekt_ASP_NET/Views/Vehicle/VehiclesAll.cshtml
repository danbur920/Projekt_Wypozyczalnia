@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Pojazdy";
}

<h1 style="text-align: center">Lista pojazdów</h1>

<div class="combobox">
    <div class="select" onclick="toggleOptions()">Wybierz</div>
    <div class="options">
        <div class="option" onclick="selectOption('Opcja 1')">Opcja 1</div>
        <div class="option" onclick="selectOption('Opcja 2')">Opcja 2</div>
        <div class="option" onclick="selectOption('Opcja 3')">Opcja 3</div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Firma</th>
            <th>Dostępność</th>
            <th>Ceny</th>
            <th>Zobacz więcej</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Id</td>
                <td>@vehicle.Name</td>
                <td>@vehicle.Brand</td>
                <td style="background-color: @(vehicle.IsAvailable == true ? "green" : "red")">
                    @(vehicle.IsAvailable == true ? "Dostępny" : "Niedostępny")
                </td>
                <td>
                    <ul>
                        <li>Cena za dzień: @vehicle.PricePerDay zł</li>
                        <li>Cena za miesiąc: @vehicle.PricePerMonth zł</li>
                        <li>Cena kupna: @vehicle.PurchasePrice zł</li>
                    </ul>
                </td>
                <td>
                    <a href="/Vehicle/VehiclesOne/@vehicle.Id">Info</a>
                </td>
            </tr>
        }
    </tbody>
</table>