@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form id="manageForm" asp-area="Identity" asp-page="/Account/Manage/Index" method="get" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">Zarządzaj kontem</button>
            </form>
        </li>
        <li class="nav-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }

    @if(User.IsInRole("admin"))
    {
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin panel</a>
    }
    @if(User.IsInRole("admin") || User.IsInRole("operator"))
    {
        <a class="nav-link text-dark" asp-area="Operator" asp-controller="Home" asp-action="Index">Operator panel</a>
    }
</ul>

@* https://localhost:7246/Identity/Account/Manage *@