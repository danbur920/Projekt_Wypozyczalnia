@model IEnumerable<Projekt_ASP_NET.Areas.Admin.ViewModels.EditUserViewModel>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var successMessage = (string)TempData["SuccessMessage"];
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success" role="alert">
        @successMessage
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Użytkownicy</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Rola</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Email</th>
                        <th>Miejscowość</th>
                        <th>Ulica</th>
                        <th>Numer domu</th>
                        <th>Telefon</th>
                        <th>Ranga użytkownika</th>
                        <th>Potwierdzony email</th>
                        <th>Zablokowane konto</th>
                        <th>Zarządzaj</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserRole</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Locality</td>
                            <td>@user.Street</td>
                            <td>@user.StreetNumber</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.UserType</td>
                            <td>@(user.EmailConfirmed ? "Tak" : "Nie")</td>
                            <td>@(user.LockoutEnd != null ? "Tak" : "Nie")</td>
                            <td>
                                <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
